pipeline {
    agent any

    stages {
        stage('Build Step') {
            steps {
                sh """
                
                   docker build . -t gcr.io/proud-gate-400110/demo:$BUILD_NUMBER
                   docker push gcr.io/proud-gate-400110/demo:$BUILD_NUMBER
                   
                   """
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}